doctype html
html
	head
		title update page
		meta(charset='utf-8')
	body
		header
			h1
				a(href='/dbase') CITY. Where is.
			ul
				each list in _dbase
					li
						a(href='/dbase/'+list.title)= list.title
		article
			- id=encodeURIComponent(_dbase2['@rid'])
			form(action='/dbase/'+id+'/update' method='post')
				p
					input(type='text' name='title_' value=_dbase2.title)
				p
					textarea(name='descr_')= _dbase2.description
				p
					input(type='submit' value='create')
