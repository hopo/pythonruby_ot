extends ../layout
block content
	article
		if topic
			h2= topic.title
			=topic.description
			div= 'by '+topic.author
		else
			h2 (title)
			| (description)
	div
		a(href='/topic/add') >add<
	if topic
		div
			a(href='/topic/'+topic.id+'/edit') >edit<
		div
			a(href='/topic/'+topic.id+'/delete') >delete<